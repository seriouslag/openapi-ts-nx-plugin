{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["development"],
    "paths": {
      "@test-api/pokemon-api": ["./packages/pokemon-api/src/index.ts"],
      "@test-api/pokemon-api/rq": ["./packages/pokemon-api/src/rq.ts"],
      "@test-plugin/pokemon-api": ["./packages/pokemon-api/src/index.ts"],
      "@test-plugin/pokemon-api/rq": ["./packages/pokemon-api/src/rq.ts"]
    }
  }
}
