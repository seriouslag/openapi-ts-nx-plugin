{
  "name": "@seriouslag/nx-openapi-ts-plugin",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "{projectRoot}/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nx/rollup:rollup",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "{projectRoot}/dist",
        "main": "{projectRoot}/src/index.ts",
        "additionalEntryPoints": [
          "{projectRoot}/src/generators/openapi-client/openapiClient.ts",
          "{projectRoot}/src/generators/openapi-config/openapiConfig.ts",
          "{projectRoot}/src/executors/update-api/updateApi.ts",
          "{projectRoot}/src/plugin/plugin.ts"
        ],
        "format": ["cjs"],
        "tsConfig": "{projectRoot}/tsconfig.lib.json",
        "rootDir": "{projectRoot}/src",
        "assets": [
          {
            "glob": "{executors,generators,plugin}/**/*.json",
            "input": "{projectRoot}/src",
            "output": "."
          },
          {
            "glob": "files",
            "input": "{projectRoot}/src/generators/openapi-client",
            "output": "."
          },
          {
            "glob": "options",
            "input": "{projectRoot}/src/generators/openapi-client",
            "output": "."
          },
          {
            "glob": "plugins",
            "input": "{projectRoot}/src/generators/openapi-client",
            "output": "."
          },
          {
            "glob": "tests",
            "input": "{projectRoot}/src/generators/openapi-client",
            "output": "."
          }
        ]
      }
    },
    "e2e": {
      "dependsOn": ["build"],
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest run --config vite.e2e.config.mts",
        "cwd": "{projectRoot}"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint packages/nx-plugin --max-warnings=0",
        "cwd": "{workspaceRoot}"
      }
    }
  },
  "tags": []
}
